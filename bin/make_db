#!/bin/bash

dir=$(dirname "$0")
# shellcheck source=bin/func_defs
. "$dir/func_defs"

check_vars

root_user=$1

# Drop existing database
echo "DROP DATABASE IF EXISTS $TE_DB" | mysql -h"$TE_DB_HOST" -u"$root_user" -p

# Create database
echo "CREATE DATABASE $TE_DB" | mysql -h"$TE_DB_HOST" -u"$root_user" -p

# Create user and permissions
echo "GRANT ALL ON $TE_DB.* TO '$TE_DB_USER'@'localhost' IDENTIFIED BY '$TE_DB_PASS'" | mysql -h"$TE_DB_HOST" -u"$root_user" -p

# Load DDL
mysql -h"$TE_DB_HOST" -u"$TE_DB_USER" -p"$TE_DB_PASS" -D"$TE_DB_NAME" < db/twittelect.sql

# Load data
mysql -h"$TE_DB_HOST" -u"$TE_DB_USER" -p"$TE_DB_PASS" -D"$TE_DB_NAME" < db/constituency.dat
mysql -h"$TE_DB_HOST" -u"$TE_DB_USER" -p"$TE_DB_PASS" -D"$TE_DB_NAME" < db/party.dat

if [[ -f db/candidate.tsv ]]
then
  bin/load_cand
fi

