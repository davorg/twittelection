#!/usr/bin/perl

use strict;
use warnings;
use 5.010;
use lib 'lib';

use Getopt::Long;
use Sys::RunAlone;

use TwittElection::App;

my $verbose;
my $force = 0;
GetOptions(verbose => \$verbose,
           force   => \$force);

my $app = TwittElection::App->new({
  verbose => $verbose,
  force   => $force,
});

my $con_rs;

$app->delay(0);

if (@ARGV) {
  $con_rs = $app->constituency_rs->search({
    mapit_id => \@ARGV,
  });
  $app->delay(0);
  $app->force(1);
} else {
  $con_rs = $app->constituency_rs;
}

my $t = $app->twitter;

$t->maintain_lists($app, $con_rs);

__END__
